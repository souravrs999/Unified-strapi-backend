{
  "kind": "collectionType",
  "collectionName": "embright_blogs",
  "info": {
    "name": "Embright Blog"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Body": {
      "type": "richtext",
      "required": true
    },
    "coverImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "publishDate": {
      "type": "date",
      "required": true
    },
    "author": {
      "type": "string"
    },
    "authorImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    }
  }
}
